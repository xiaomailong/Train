project Train is

   for Source_Dirs use ("src/**");
   for Object_Dir use "src/";

   package Builder is
      for Default_Switches ("ada") use ("-g");
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use ("-g", "-O2", "-gnatwae", "-gnat05");
   end Compiler;

   package Binder is
      for Default_Switches ("ada") use ("-g");
   end Binder;

   for Main use ("test_track.adb");

end Train;

